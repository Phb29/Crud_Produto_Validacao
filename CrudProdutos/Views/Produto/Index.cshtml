@model List<Produto>
<a class="btn btn-primary" asp-controller="Produto" asp-action="New">Add  Novo Produto</a>





@if (TempData["sucess"] != null)
{
    <div id="myAlert" class="alert alert-success alert-dismissible " role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert float-end" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["sucess"]
    </div>
}
@if (TempData["Erro"] != null)
{
    <div id="myAlert" class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert float-end" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["Erro"]

    </div>
}

    @if (TempData["delete"] != null)
    {
<div id="myAlert" class="alert alert-danger" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert float-end" data-bs-dismiss="alert" aria-label="Close">X</button>
@TempData["delete"]
</div>
}

 
<h2 class="text-center"> Todos Produtos</h2>

@if (Model.Count == 0)
{
    <p>No employee(s) found!</p>
}
else
{
   <div class="container">
        <div class="table-responsive-sm">
        <table class="table table-sm" width="100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Quantidade</th>
                    <th class="th-btn">Deletar</th>
                    <th class="th-btn">Detalhe</th>
                    <th class="th-btn">Editar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Nome</td>
                        <td>@e.Preco</td>
                        <td class="quant">@e.Quant </td>
                        <td class="btn-cell">
                            <a asp-action="Delete" asp-route-id="@e.IdProduto" class="btn btn-danger btn-sm btn-block">Delete</a>
                        </td>
                        <td class="btn-cell">
                            <a asp-action="Details" asp-route-id="@e.IdProduto" class="btn btn-secondary btn-sm btn-block">Details</a>
                        </td>
                        <td class="btn-cell">
                            <a asp-action="Update" asp-route-id="@e.IdProduto" class="btn btn-secondary btn-sm btn-block">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
    
}
<script>
    // Seleciona a div do alerta
    var alertDiv = document.getElementById("myAlert");

    // Adiciona as classes fade e show
    alertDiv.classList.add("fade", "show");

    // Fecha o alerta depois de 3 segundos
    setTimeout(function () {
        alertDiv.classList.remove("show");
        alertDiv.classList.add("hide");
    }, 3000);
</script>

             